<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/sig_color_flat_pure_white_any"/>
            <corners android:radius="@dimen/default_gap"/>
            <stroke android:width="0.5dp" android:color="@color/sig_color_layout_input_border_focused_light"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/sig_color_flat_pure_white_any"/>
            <corners android:radius="@dimen/default_gap"/>
            <stroke android:width="0.5dp" android:color="@color/sig_color_layout_input_border_light"/>
        </shape>
    </item>
</selector>
