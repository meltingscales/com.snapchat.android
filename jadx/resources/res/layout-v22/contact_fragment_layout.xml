<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/contact_fragment" android:background="?attr/sigColorBackgroundMain" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="1">
    <FrameLayout android:id="@+id/contact_details_nav_bar" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <include layout="@layout/marco_polo_nav_bar"/>
        <include layout="@layout/payments_nav_bar_layout"/>
    </FrameLayout>
    <RelativeLayout android:orientation="vertical" android:id="@+id/contact_details_form" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/contact_details_nav_bar" android:paddingStart="@dimen/default_gap" android:paddingEnd="@dimen/default_gap">
        <com.snap.payments.lib.views.FloatLabelLayout android:id="@+id/marco_polo_contact_info_add_email_edit_text" android:layout_width="match_parent" style="@style/marco_polo_float_label_text_field">
            <EditText android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/marco_polo_contact_info_email_address" android:maxLines="2" android:inputType="textEmailAddress" android:layout_marginEnd="@dimen/default_gap" android:importantForAutofill="no"/>
        </com.snap.payments.lib.views.FloatLabelLayout>
        <View android:id="@+id/view" android:background="?attr/sigColorLayoutDivider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/marco_polo_contact_info_add_email_edit_text"/>
        <com.snap.payments.lib.views.FloatLabelLayout android:id="@+id/marco_polo_contact_info_add_phone_edit_text" android:layout_width="match_parent" android:layout_below="@+id/view" style="@style/marco_polo_float_label_text_field">
            <EditText android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/marco_polo_contact_info_phone_number" android:maxLength="20" android:inputType="number" android:importantForAutofill="no"/>
        </com.snap.payments.lib.views.FloatLabelLayout>
        <View android:id="@+id/view2" android:background="?attr/sigColorLayoutDivider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/marco_polo_contact_info_add_phone_edit_text"/>
    </RelativeLayout>
    <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/text_size_fine_print" android:textColor="@color/sig_color_base_red_regular_any" android:gravity="center" android:id="@+id/marco_polo_contact_info_error_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap" android:minLines="1" android:layout_below="@+id/contact_details_form" android:paddingStart="@dimen/default_gap" android:paddingEnd="@dimen/default_gap"/>
    <FrameLayout android:id="@+id/contact_info_notice" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/legacy_nav_bar">
        <include layout="@layout/legal_notice_layout"/>
    </FrameLayout>
    <include layout="@layout/payments_loading_bar"/>
    <FrameLayout android:id="@+id/legacy_nav_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <ViewStub android:id="@+id/dummy_nav_bar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </FrameLayout>
</RelativeLayout>
