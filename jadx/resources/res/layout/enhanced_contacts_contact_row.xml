    <ImageView android:id="@+id/delete_button" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/svg_x_24x24" android:tint="@color/sig_color_base_gray50_any"/>
</LinearLayout>
