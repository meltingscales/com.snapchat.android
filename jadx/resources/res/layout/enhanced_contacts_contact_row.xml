<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/bitmoji" android:layout_width="@dimen/enhanced_contact_bitmoji_size" android:layout_height="@dimen/enhanced_contact_bitmoji_size" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <com.snap.ui.view.SnapFontTextView android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextAppearance.Title1"/>
        <com.snap.ui.view.SnapFontTextView android:id="@+id/phone_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-3dp" style="@style/TextAppearance.Subtitle2.Gray50"/>
