<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/display_name_page" android:background="?attr/sigColorBackgroundMain" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/ngo_top_bar"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/content_holder" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
            <com.snap.ui.view.SnapFontTextView android:id="@+id/first_name_label" android:text="@string/display_name_first_name_label" style="@style/NgoIdentityFieldHint"/>
            <com.snap.ui.view.SnapFontEditText android:id="@+id/display_name_first_name_field" android:layout_width="match_parent" android:layout_height="@dimen/ui_element_unit" android:layout_marginTop="@dimen/default_gap" android:maxLines="1" android:inputType="textCapWords" style="@style/NgoIdentityField"/>
            <com.snap.ui.view.SnapFontTextView android:id="@+id/last_name_label" android:text="@string/display_name_last_name_label" style="@style/NgoIdentityFieldHint"/>
            <com.snap.ui.view.SnapFontEditText android:id="@+id/display_name_last_name_field" android:layout_width="match_parent" android:layout_height="@dimen/ui_element_unit" android:layout_marginTop="@dimen/default_gap" android:maxLines="1" android:inputType="textCapWords" style="@style/NgoIdentityField"/>
            <com.snap.ui.view.SnapFontTextView android:id="@+id/display_name_error_message" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/IdentityFieldError"/>
            <include layout="@layout/signup_legal_terms_checklist"/>
            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2"/>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/signup_legal_terms_copy"/>
    <com.snap.identity.api.sharedui.ProgressButton android:layout_gravity="center_horizontal" android:id="@+id/continue_button" style="@style/LoginSignupButton"/>
</LinearLayout>
