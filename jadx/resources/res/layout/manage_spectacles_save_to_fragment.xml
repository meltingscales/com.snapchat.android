                <com.snap.spectacles.lib.fragments.SpectaclesSaveToExportFormatView android:id="@+id/save_to_format_horizontal_16_9_view" custom:exportFormat="horizontal_16_9" style="@style/SpectaclesSaveToExportFormatStyle"/>
