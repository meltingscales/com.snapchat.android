            <com.snap.ui.view.SnapFontTextView android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@+id/spectacles_save_to_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap_2x" android:layout_marginBottom="@dimen/default_gap_2x" android:text="@string/spectacles_save_to_description" android:maxLines="3" android:drawablePadding="@dimen/default_gap" android:textAlignment="center" android:layout_marginStart="@dimen/spectacles_save_to_description_horizontal_margin" android:layout_marginEnd="@dimen/spectacles_save_to_description_horizontal_margin" style="@style/new_settings_item_text"/>
