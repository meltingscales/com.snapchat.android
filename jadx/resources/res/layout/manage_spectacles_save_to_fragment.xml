                <com.snap.spectacles.lib.fragments.SpectaclesSaveToExportFormatView android:id="@+id/save_to_format_portrait_view" custom:exportFormat="portrait" style="@style/SpectaclesSaveToExportFormatStyle"/>
            </LinearLayout>
        </LinearLayout>
