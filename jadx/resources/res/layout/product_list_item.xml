<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/merchant_entry" android:paddingTop="@dimen/default_gap_2x" android:paddingBottom="@dimen/default_gap_2x" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/product_icon_wrapper" android:background="@drawable/rounded_corner_image_border" android:layout_width="@dimen/cart_review_product_cell_size" android:layout_height="@dimen/cart_review_product_cell_size" android:layout_centerVertical="true" android:layout_marginStart="@dimen/default_gap" android:layout_alignParentStart="true">
        <com.snap.ui.view.PausableLoadingSpinnerView android:layout_gravity="center" android:id="@+id/loading_spinner_for_product_icon" android:layout_width="@dimen/default_gap_3x" android:layout_height="@dimen/default_gap_3x"/>
        <com.snap.imageloading.view.SnapImageView android:id="@+id/product_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="1px" android:scaleType="fitXY" android:adjustViewBounds="true"/>
    </FrameLayout>
    <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/payments_text_medium" android:textStyle="bold" android:ellipsize="end" android:id="@+id/product_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="3" android:layout_alignParentTop="true" android:textAlignment="viewStart" android:layout_marginStart="@dimen/default_gap_2x" android:layout_toStartOf="@+id/product_price_field" android:layout_toEndOf="@+id/product_icon_wrapper"/>
    <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/text_size_small" android:textColor="?attr/sigColorTextPrimary" android:id="@+id/product_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/product_name" android:textAlignment="viewStart" android:layout_marginStart="@dimen/default_gap_2x" android:layout_toEndOf="@+id/product_icon_wrapper"/>
    <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/text_size_small" android:textColor="?attr/sigColorTextPrimary" android:id="@+id/quantity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/product_details" android:layout_marginStart="@dimen/default_gap_2x" android:layout_toEndOf="@+id/product_icon_wrapper"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/product_price_field" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true">
        <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/payments_text_medium" android:gravity="end" android:id="@+id/product_price" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/default_gap_2x"/>
        <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/payments_text_medium" android:textColor="@color/sig_color_base_gray60_any" android:gravity="end" android:id="@+id/product_original_price" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/default_gap_2x"/>
    </LinearLayout>
</RelativeLayout>
