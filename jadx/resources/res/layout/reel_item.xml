<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar android:layout_gravity="center" android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateTint="@color/lightGrey"/>
    <app.aifactory.sdk.view.player.PlayerSimpleView android:id="@+id/reelPlayer" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/previewThumbnail" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <TextView android:textSize="12sp" android:layout_gravity="start|top" android:id="@+id/fpsView" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="4dp"/>
    <ImageView android:layout_gravity="center" android:id="@+id/errorIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sticker_picker_error"/>
    <TextView android:textSize="10sp" android:textColor="@color/white" android:ellipsize="end" android:layout_gravity="bottom|center_horizontal" android:id="@+id/scenarioId" android:background="@drawable/rounded_translucent" android:padding="4dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="32dp" android:singleLine="true" android:layout_marginStart="4dp" android:layout_marginEnd="4dp" app:layout_goneMarginBottom="4dp"/>
    <View android:id="@+id/frame" android:background="@drawable/reel_item_frame_selected" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0"/>
    <FrameLayout android:gravity="center_vertical" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/musicLabel" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <FrameLayout android:id="@+id/tutorialContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</merge>
