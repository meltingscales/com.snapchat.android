<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/send_to_preview_layout" android:background="@drawable/send_to_attachment_background" android:padding="@dimen/default_gap" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/send_to_preview_content" android:clipChildren="false" android:clipToPadding="false" android:layout_width="@dimen/send_to_preview_default_media_width" android:layout_height="@dimen/send_to_preview_default_media_height" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <com.snap.imageloading.view.SnapImageView android:id="@+id/send_to_preview_image_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerCrop"/>
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <com.snap.ui.view.PausableLoadingSpinnerView android:layout_gravity="center" android:id="@+id/send_to_preview_loading_spinner" android:visibility="gone" android:layout_width="@dimen/send_to_attachment_loading_spinner_size" android:layout_height="@dimen/send_to_attachment_loading_spinner_size"/>
            <ImageView android:id="@+id/laguna_background_view" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_chat_laguna_video_mask_dark"/>
            <ImageView android:layout_gravity="center" android:id="@+id/send_to_magic_moment_icon_view" android:visibility="gone" android:layout_width="@dimen/send_to_attachment_magic_moment_icon_size" android:layout_height="@dimen/send_to_attachment_magic_moment_icon_size" android:src="@drawable/svg_magic_moment_toggle_off_24x24"/>
        </FrameLayout>
    </FrameLayout>
    <com.snap.ui.view.SnapFontEditText android:id="@+id/send_to_preview_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/add_a_chat" android:layout_marginStart="@dimen/default_gap_2x" android:layout_toEndOf="@+id/send_to_preview_content" style="@style/SendToAttachmentText"/>
</RelativeLayout>
