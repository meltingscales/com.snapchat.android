<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap">
    <LinearLayout android:gravity="start" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <com.snap.ui.view.SnapFontTextView android:id="@+id/aura_title" android:paddingTop="2dp" android:paddingBottom="2dp" style="@style/IdentitySettingsItemName"/>
        <com.snap.ui.view.SnapFontTextView android:textSize="@dimen/text_size_fine_print" android:id="@+id/aura_content" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_height="wrap_content" style="@style/IdentitySettingsItemText"/>
        <com.snap.ui.view.SnapFontTextView android:id="@+id/aura_disclaimer" android:paddingTop="2dp" android:paddingBottom="2dp" style="@style/IdentitySettingsItemSubtext"/>
    </LinearLayout>
    <com.snap.component.button.SnapButtonView android:layout_gravity="end" android:id="@+id/aura_clear" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/default_gap_three_quarters" custom:button_icon="@drawable/svg_x_24x24" custom:button_style="small_button_circle_gray"/>
</LinearLayout>
